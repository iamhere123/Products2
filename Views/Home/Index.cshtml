@model IEnumerable<Products.Product>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <input type="text" name="searchString" value="" placeholder="Search products..." />
    <input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Price</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.Category.CategoryName</td>
            <td>@product.Price</td>
        </tr>
    }
</table>
